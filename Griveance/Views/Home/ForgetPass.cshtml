@using System.Configuration;

<!-- begin::Head -->
<head>
    <meta charset="utf-8" />
    <title>Metronic | ForgotPassword</title>
    <meta name="description" content="Latest updates and statistic charts">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no">
    <!--begin::Web font -->
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js"></script>
    <script>
			WebFont.load({
            google: {"families":["Poppins:300,400,500,600,700","Roboto:300,400,500,600,700"]},
            active: function() {
                sessionStorage.fonts = true;
            }
          });
    </script>
    <script>
        var baseURL = "@ConfigurationManager.AppSettings["BaseUrlPath"].ToString()";
    </script>
    <!--end::Web font -->
    <!--begin::Global Theme Styles -->
    <link href="~/Content/assets/vendors/base/vendors.bundle.css" rel="stylesheet" type="text/css" />

    <!--RTL version:<link href="../../../assets/vendors/base/vendors.bundle.rtl.css" rel="stylesheet" type="text/css" />-->
    <link href="~/Content/assets/demo/default/base/style.bundle.css" rel="stylesheet" type="text/css" />

    <!--RTL version:<link href="../../../assets/demo/default/base/style.bundle.rtl.css" rel="stylesheet" type="text/css" />-->
    <!--end::Global Theme Styles -->
    <link rel="shortcut icon" href="~/Content/assets/demo/default/media/img/logo/favicon.ico" />
</head>

<!-- end::Head -->
<!-- begin::Body -->
<body ng-app="GR" class="m--skin- m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--fixed m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">
    <!-- begin:: Page -->
    <div class="m-grid m-grid--hor m-grid--root m-page"ng-controller="LoginController">
        <div class="m-grid__item m-grid__item--fluid m-grid m-grid--hor m-login m-login--signin m-login--2 m-login-2--skin-2" id="m_login" style="background-image: url(../../Content/assets/app/media/img//bg/bg-3.jpg);">
            <div class="m-grid__item m-grid__item--fluid	m-login__wrapper">
                <form name="form" id="frmCRUD" class="m-login__form m-form" action="">
                    <div class="form-body">
                        <div class="m-login__container">
                            <div class="m-login__logo">
                                <a href="#">
                                    <img src="~/Content/assets/app/media/img/logos/logo-1.png">
                                </a>
                            </div>



                                <div class="m-login__head">

                                    <h3 class="m-login__title">Forgotten Password ?</h3>
                                    <div class="m-login__desc">Enter your mobile number to reset your password:</div>
                                </div>

                                <div class="form-group m-form__group">
                                    <input class="form-control m-input" type="text" id="phoneno" placeholder="Phone Number" name="phone" ng-model="ContactNumber" autocomplete="off" required>
                                   
                                </div>
                                <div class="m-login__form-action">
                                    <button id="m_login_forget_password_submit" ng-click="Verify()" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air  m-login__btn m-login__btn--primaryr">Request</button>&nbsp;&nbsp;
                                    <button id="m_login_forget_password_cancel" ng-click="Close()" class="btn btn-outline-focus m-btn m-btn--pill m-btn--custom m-login__btn">Cancel</button>
                                </div>

                          
                            <div class="m-login__account">
                                <span class="m-login__account-msg">
                                    Don't have an account yet ?
                                </span>&nbsp;&nbsp;
                                <a href="javascript:;" id="m_login_signup" class="m-link m-link--light m-login__account-link">Sign Up</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- end:: Page -->
    <!--begin::Global Theme Bundle -->
    <script type="text/javascript" src="~/Content/assets/plugins/jquery/dist/jquery.min.js"></script>
  

    <script src="~/Content/assets/vendors/base/vendors.bundle.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/angularjs/scripts/angular.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ProjectScript/Login/LoginModule.js")"></script>
    <script src="@Url.Content("~/Scripts/Common/Service.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ProjectScript/Login/ForgetPassword.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Common/CoomonFunctions.js")"></script>
    <script src="@Url.Content("~/Scripts/Common/customize.js")"></script>
    <script src="~/Scripts/Common/bootbox.min.js"></script>



    <!--end::Global Theme Bundle -->
    <!--begin::Page Scripts -->
    @*<script src="~/Content/assets/snippets/custom/pages/user/login.js" type="text/javascript"></script>*@

    <!--end::Page Scripts -->
</body>

