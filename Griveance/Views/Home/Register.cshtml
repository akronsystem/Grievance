                                    <span class="m-input-icon__icon m-input-icon__icon--left"><span><i class="la la-pencil"></i></span></span>


                                </div>

                            </div>
                            <div class="form-group m-form__group">
                                <label>Contact Number</label>
                                <div class="m-input-icon m-input-icon--left">

                                    <input type="number" id="phone" class="form-control m-input" placeholder="Contact Number" pattern="^[0-9_ ]*$" title="Only 10 Digit Number" maxlength="10" min="10" ng-model="contact" data-skin="dark" required>
                                    <span class="m-input-icon__icon m-input-icon__icon--left"><span><i class="la la-phone-square"></i></span></span>


                                </div>

                            </div>
                            <div class="form-group m-form__group" id="relation" style="display:none">
