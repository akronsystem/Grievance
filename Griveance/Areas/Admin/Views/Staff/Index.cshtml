
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminDashboardLayout.cshtml";
}

@*<h2>Staff</h2>*@
<script type="text/javascript" src="~/Content/assets/plugins/jquery/dist/jquery.min.js"></script>
<script type='text/javascript' src='~/Content/assets/app/datatables/jquery.dataTables.min.js'></script>
<link href="~/Content/assets/vendors/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />


<script src="@Url.Content("~/Content/angularjs/scripts/angular.min.js")" type="text/javascript"></script>

<script type='text/javascript' src='~/Content/assets/app/datatables/angular-dataTables.js'></script>
<script src="~/Content/assets/vendors/custom/datatables/datatables.bundle.js" type="text/javascript"></script>

<script src="@Url.Content("~/Scripts/ProjectScript/Staff/StaffModule.js")"></script>
<script src="@Url.Content("~/Scripts/Common/Service.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/ProjectScript/Staff/StaffController.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Common/CoomonFunctions.js")"></script>
<script src="@Url.Content("~/Scripts/Common/customize.js")"></script>
<link href="~/Content/EditCommon.css" rel="stylesheet" />

<script>
        var baseURL = "@ConfigurationManager.AppSettings["BaseUrlPath"].ToString()";
</script>
<html lang="en" class="no-js">

<body ng-app="GR">
    @using System.Configuration;
    <div ng-controller="UsersController">

        <form id="frmCRUD" name="form" class="m-form m-form--fit m-form--label-align-right student-admission-wrapper" ng-init="Initialize()">

            <div class="m-portlet m-portlet--tab">

                <div class="m-portlet m-portlet--mobile">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                  List Of Registered Staff
                                </h3>
                            </div>
                            <div style="margin-left:600px;margin-top: 17px;" class="StatusCustom">
                                <label id="lblstaus">Status</label>
                            </div>

                               <div class="form-group m-form__group">
                               
                               
                                   <select ng-model="btnactive" ng-change="Initialize()" class="m-dropdown__toggle dropdown-toggle">

                                       <option class="form-control" value="Active" ng-selected="true">Active</option>
                                       <option class="form-control" value="Deactive">Deactive</option>
                                   </select>
                               
                            </div>
                        </div>

                        @*<div class="m-portlet__head-tools">
                            <ul class="m-portlet__nav">
                                <li class="m-portlet__nav-item">
                                    <input type="button" style="float:right" class="btn btn-accent" value="NEW" ng-click="ShowHide()" />

                                </li>


                            </ul>
                        </div>*@
                    </div>

                </div>



                <!--begin::Form-->
                <div ng-show="IsVisible">
                    <div class="form-body">

                        <div class="m-portlet__body">
                            <div>
                                <div class="form-group m-form__group">
                                    <label>
                                        Name Of The Staff
                                        <span class="required"> * </span>
                                    </label>

                                    <input type="text" value={{NameOfTheStaff}} ng-model="NameOfTheStaff" name="name" id="name" class="form-control" pattern="^[a-zA-Z]+(\s[a-zA-Z]+)?$" title="Name Should be Alphabate only" required />
                                    <input type="hidden" value="{{UserId}}" />
                                    <input type="hidden" value="{{Type}}" />
                                </div>
                                <div class="form-group m-form__group">
                                    <label>
                                        Employee Code
                                    </label>

                                    <input type="text" value={{EmployeeCode}} ng-model="EmployeeCode" name="empcode" code="empcode" class="form-control" disabled  required />


                                </div>
                                <div class="form-group m-form__group">
                                    <label>
                                        Gender
                                    </label>
                                    <select class="form-control" ng-model="Gender" id="gender" required>
                                        <option>Male</option>
                                        <option>Female</option>
                                    </select>
                                    @*<input type="text" value={{Gender}} name="Port" ng-model="Gender" class="form-control"  required />*@


                                </div>

                                <div class="form-group m-form__group">
                                    <label>
                                        Department
                                    </label>

                                    <input type="text" value={{Department}} name="department" id="department" ng-model="Department" class="form-control"  required />


                                </div>

                                <div class="form-group m-form__group">
                                    <label>
                                        Designation
                                    </label>

                                    <input type="text" value={{Designation}} name="designation" id="designation" ng-model="Designation" class="form-control" title="Designation Should be Alphabates" pattern="^[a-zA-Z]+(\s[a-zA-Z]+)?$"  required />


                                </div>
                                <div class="form-group m-form__group">
                                    <label>
                                        Email
                                    </label>
                                    @{
                                        var email = "^([\\w\\.\\-]+)@([\\w\\-]+)((\\.(\\w){2,3})+)$";
                                    }
                                    <input type="email" value={{Email}} name="email" id="email" ng-model="Email" class="form-control" pattern="@email" title="Please Enter Valid Email"  required />


                                </div>
                                <div class="form-group m-form__group">
                                    <label>
                                        Contact Number
                                    </label>

                                    <input type="number" value={{ContactNumber}} name="contactno" id="phone" ng-model="ContactNumber" class="form-control" pattern="[0-9]{10}" title="Only 10 Digit Number" required />


                                </div>





                            </div>

                        </div>
                        <div class="m-portlet__foot m-portlet__foot--fit">
                            <div class="m-form__actions">



                                <button class="btn btn-success " ng-show="btnUpdate" ng-click="AddUpdate(NameOfTheStaff, EmployeeCode, Gender, Department,Designation, Email, ContactNumber,UserId,Type)" value="{{btnValue}}"  ng-disabled="disableBtn">
                                    <i class="fa fa-database"> </i>Update
                                </button>
                                <button class="btn default" ng-click="Clear()">
                                    <i class="fa fa-times"> </i> Cancel
                                </button>
                                <p ng-hide="isCheck">
                                    <img src="{{ myText }}" width="220px" height="15px" alt="images" />
                                </p>

                            </div>
                        </div>

                        </div>

                        <!--end::Form-->
                    </div>







                <div class="m-portlet__body">

                    <p style="color:red">{{msg}}</p>


                    <table datatable="ng" dt-options="dtOptions" class="table table-striped- table-responsive " id="atable">
                        <thead>
                            <tr>
                                <th>Name Of The Staff</th>
                                <th>Employee Code</th>
                                <th>Gender</th>
                                <th>Department</th>
                                <th>Designation</th>
                                <th>Email</th>
                                <th>Contact Number</th>
                                <th>Action</th>
                                <th>Status</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="data in Staff  | filter:search">
                                <td>
                                    {{data.name}}
                                </td>
                                <td>
                                    {{data.code}}
                                </td>
                                <td>
                                    {{data.gender}}
                                </td>
                                <td>
                                    {{data.department}}
                                </td>
                                <td>
                                    {{data.designation}}
                                </td>
                                <td>
                                    {{data.email}}
                                </td>
                                <td>
                                    {{data.contact}}
                                </td>
                                <td>
                                    <i class="fa fa-edit   btnEdit" value="Edit" ng-click="ShowHide(data.UserId)" title="Edit" ></i>
                                </td>
                                <td>
                                    <span class="m-switch m-switch--icon m-switch--danger">
                                        <label>
                                            <input type="checkbox" ng-show="chkStatus" ng-checked="{{data.staffstatus}}" ng-click="Delete(data.UserId,data.type)">
                                            <span></span>
                                        </label>
                                    </span>
                                </td>

                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>

        </form> 
    </div>


   
</body>
</html>



