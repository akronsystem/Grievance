
@{
    ViewBag.Title = "GrievanceType";
    Layout = "~/Areas/Admin/Views/Shared/AdminDashboardLayout.cshtml";
}

<h2>Grievance Type List</h2>
<html lang="en" class="no-js">

<body ng-app="GR">
    @using System.Configuration;
    <div ng-controller="GrievanceController">

        <div ng-show="IsVisible">
            <div class="row">
                <div class="col-md-12 ">
                    <div class="portlet box blue">

                        <div class="portlet-body display-hide">

                            <div class="form-body">
                                <div class="form-group">
                                    <label class="control-label col-md-4">
                                       Grievance Name
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="input-group">
                                        <input type="text" ng-model="GrievanceName" value={{grivance_name}}  class="form-control" placeholder="GrievanceName" required />
                               

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-4">
                                     Grievance Discription
                                    </label>
                                    <div class="input-group">
                                        <input type="text" ng-model="GrievanceDescription"  value={{grivance_description}} class="form-control" placeholder="GrievanceDescription" />
                                        <input type="text" ng-model="grivance_id"  value={{grivance_id}} class="form-control" required disabled="disabled"/>
                                    </div>
                                </div>                              

                            </div>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-offset-4 col-md-9">
                                        <button class="btn blue hide-portlet " ng-show="btnSave" ng-click="Save(grivance_name,grivance_description)">
                                            <i class="fa fa-database"> </i> Save
                                        </button>

                                        <button class="btn blue hide-portlet" ng-show="btnUpdate" ng-click="Update(GrievanceName,GrievanceDescription,GrievanceId)">
                                            <i class="fa fa-database"> </i> Update
                                        </button>
                                        <button class="btn default hide-portlet" ng-click="Cancel()">
                                            <i class="fa fa-times"> </i> Cancel
                                        </button>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
        <button class="btn btn-primary" ng-click="Show()">Add</button>
        <form class="student-admission-wrapper" ng-init="Initialize()">
            <table class="table table-striped- table-bordered table-hover table-checkable" id="m_table_1">
                <thead>
                    <tr>
                        <th>Grievance Id</th>
                        <th>Name Of The Grievance</th>                       
                        <th>Description</th>
                        <th>Action</th>


                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="data in GrievanceType">
                        <td>
                            {{data.grivance_id }}
                        </td>
                        <td>
                            {{data.grivance_name}}
                        </td>
                        <td>
                            {{data.grivance_description}}
                        </td>
                        <td><input type="button" class="btn btn-primary" value="Edit" ng-click="ShowHide(data.grivance_id)" /></td>

                    </tr>

                </tbody>
            </table>
        </form>
    </div>


    <script src="@Url.Content("~/Content/angularjs/scripts/angular.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ProjectScript/Grievance/GrievanceTypeModule.js")"></script>
    <script src="@Url.Content("~/Scripts/Common/Service.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ProjectScript/Grievance/GrievanceType.js")" type="text/javascript"></script>


    <script>
        var baseURL = "@ConfigurationManager.AppSettings["BaseUrlPath"].ToString()";
    </script>
</body>
</html>


