
@{
    ViewBag.Title = "GrievanceType";
    Layout = "~/Areas/Admin/Views/Shared/AdminDashboardLayout.cshtml";
}

@*<h2>Grievance Type List</h2>*@
<html lang="en" class="no-js">

<body ng-app="GR">
    @using System.Configuration;
    <div ng-controller="GrievanceController">
        <form id="frmCRUD" name="form" class="m-form m-form--fit m-form--label-align-right student-admission-wrapper" ng-init="Initialize()">

            <div class="m-portlet m-portlet--tab">

                <div class="m-portlet m-portlet--mobile">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                    Grievance Type List
                                </h3>
                            </div>
                        </div>
                        <div class="m-portlet__head-tools">
                            <ul class="m-portlet__nav">
                                <li class="m-portlet__nav-item">
                                    <input type="button" style="float:right" class="btn btn-accent" value="Add" ng-click="Show()" />

                                </li>


                            </ul>
                        </div>
                    </div>

                </div>
                <div ng-show="IsVisible">
                    <div class="form-body">
                        <div class="m-portlet__body">
                            <div class="form-group m-form__group">
                                <label>Grievance Name</label>
                                <div class="input-group">

                                    <input type="text" ng-model="GrievanceName" id="name" value={{grivance_name}} class="form-control" placeholder="GrievanceName" pattern="^([A-Za-z]+ )+[A-Za-z]+$|^[A-Za-z]+$" title="Grievance Name Should be Alphabates" required />


                                </div>
                            </div>

                            <div class="form-group m-form__group">
                                <label>Grievance Description</label>
                                <div class="input-group">
                                    <input type="text" ng-model="GrievanceDescription" id="type" value={{grivance_description}} class="form-control" placeholder="GrievanceDescription" pattern="^([A-Za-z]+ )+[A-Za-z]+$|^[A-Za-z]+$" title="Grievance Description Should be Alphabates"  required />
                                </div>
                            </div>
                            <div class="form-group" hidden="hidden">

                                <div class="input-group">
                                    <input type="text" ng-model="grivance_id" value={{grivance_id}} class="form-control" required disabled="disabled" />
                                </div>
                            </div>
                        </div>
                            <div class="m-portlet__foot m-portlet__foot--fit">
                                <div class="m-form__actions">

                                    <button class="btn btn-info" ng-show="btnSave" value="{{btnValue}}"  ng-disabled="disableBtn" ng-click="Save(grivance_name,grivance_description)">
                                        <i class="fa fa-database"> </i> Save
                                    </button>

                                    <button class="btn btn-success" ng-show="btnUpdate" value="{{btnValue}}" ng-disabled="disableBtn" ng-click="Update(GrievanceName,GrievanceDescription,GrievanceId)">
                                        <i class="fa fa-database"> </i> Update
                                    </button>
                                    <button class="btn default" ng-click="Cancel()">
                                        <i class="fa fa-times"> </i> Cancel
                                    </button>
                                    <p ng-hide="isCheck">
                                        <img src="{{ myText }}" width="220px" height="15px" alt="images" />
                                    </p>
                                </div>



                           
                        </div>
                             </div>       </div>
               
                <div class="m-portlet__body">

                    <table datatable="ng" dt-options="dtOptions" class="table table-striped- table-bordered  " id="atable">
                        <thead>
                            <tr>
                                <th>Grievance Id</th>
                                <th>Name Of The Grievance</th>
                                <th>Description</th>
                                <th>Action</th>


                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="data in GrievanceType | filter:search">
                                <td>
                                    {{data.grivance_id }}
                                </td>
                                <td>
                                    {{data.grivance_name}}
                                </td>
                                <td>
                                    {{data.grivance_description}}
                                </td>
                                <td>
                                    <i class="fa fa-edit  btnEdit" value="Edit" ng-click="ShowHide(data.grivance_id)" title="Edit"></i>
                                </td>
                               


                            </tr>

                        </tbody>
                    </table>

                </div>
            </div>
        </form>
    </div>

    <script type="text/javascript" src="~/Content/assets/plugins/jquery/dist/jquery.min.js"></script>
    <script type='text/javascript' src='~/Content/assets/app/datatables/jquery.dataTables.min.js'></script>
    <link href="~/Content/assets/vendors/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />


    <script src="@Url.Content("~/Content/angularjs/scripts/angular.min.js")" type="text/javascript"></script>

    <script type='text/javascript' src='~/Content/assets/app/datatables/angular-dataTables.js'></script>
    <script src="~/Content/assets/vendors/custom/datatables/datatables.bundle.js" type="text/javascript"></script>

    
    <script src="@Url.Content("~/Scripts/ProjectScript/Grievance/GrievanceTypeModule.js")"></script>

    <script src="@Url.Content("~/Scripts/Common/Service.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ProjectScript/Grievance/GrievanceType.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Common/CoomonFunctions.js")"></script>
    <script src="@Url.Content("~/Scripts/Common/customize.js")"></script>
    <link href="~/Content/EditCommon.css" rel="stylesheet" />





   
   
    <script>
        var baseURL = "@ConfigurationManager.AppSettings["BaseUrlPath"].ToString()";
    </script>
</body>
</html>


