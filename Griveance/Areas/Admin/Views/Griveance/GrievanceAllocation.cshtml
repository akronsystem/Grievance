                <div ng-show="IsVisible">
                    <div class="m-portlet__body">

                        <div class="form-body">
                            <div class="form-group m-form__group">
                                <label>
                                    Name Of The Member
                                    <span class="required"> * </span>
                                </label>

                                <input type="text" value={{name}} ng-model="name" name="name" id="name" class="form-control" pattern="^[a-zA-Z]+(\s[a-zA-Z]+)?$" title="Name Should be Alphabate only" required />
                                <input type="hidden" value="{{UserId}}" />
                                <input type="hidden" value="{{Expr1}}" />
                            </div>
                            <div class="form-group m-form__group">
                                <label>
                                    Employee Code
                                </label>

                                <input type="text" value={{code}} ng-model="code" disabled name="code" id="code" class="form-control" required />


                            </div>
                            <div class="form-group m-form__group">
                                <label>
                                    Designation
                                </label>

                                <input type="text" value={{designation}} name="Port" ng-model="designation" class="form-control" required />


                            </div>

                            <div class="form-group m-form__group" ng-init="GetInfo()">
                                <label>
                                    Grievance Type
                                </label>

                                @*<input type="text" value={{griType}} name="Port" ng-model="griType" class="form-control" required />*@

                                <select class="form-control m-input" id="exampleGrievance" ng-model="griType">
                                    <option ng-repeat="s in Grievance" value="{{s.grivance_name}}">{{s.grivance_name}}</option>

                                </select>
                            </div>

                            <div class="form-group m-form__group">
                                <label>
                                    Email
                                </label>

                                <input type="text" value={{email}} name="Port" ng-model="email" class="form-control" required />


                            </div>
                            <div class="form-group m-form__group">
                                <label>
                                    Contact
                                </label>

                                <input type="text" value={{contact}} name="Port" ng-model="contact" class="form-control" required />


                            </div>
                         
                        </div>
                    </div>
                    <div class="m-portlet__foot m-portlet__foot--fit">
                        <div class="m-form__actions">



                            <button class="btn btn-success " ng-show="btnUpdate" ng-click="AddUpdate(name, code, designation, griType,email, contact, UserId,Expr1)">
                                <i class="fa fa-database"> </i>Update
                            </button>
                            <button class="btn default" ng-click="Clear()">
                                <i class="fa fa-times"> </i> Cancel
                            </button>


                        </div>
                    </div>


                    <!--end::Form-->
                </div>

                <div class="m-portlet__body">
                    
                    <p style="color:red">{{msg}}</p>

                    <table datatable="ng" dt-options="dtOptions" class="table table-striped- table-responsive  " id="atable">
                        <thead>
                            <tr>
                                <th>Member Id</th>
                                <th>Employee Code</th>
                                <th>Name Of The Member</th>
                                <th>Designation</th>
                                <th>Grievance Type</th>
                                <th>Email</th>
                                <th>Contact Number</th>
                                <th>Modified Date</th>
                                <th>Action</th>
                                <th>Display</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="data in GrievanceAllocation | filter:search">
                                <td>
                                    {{data.Expr1}}
                                </td>
                                <td>
                                    {{data.code}}
                                </td>
                                <td>
                                    {{data.name}}
                                </td>
                                <td>
                                    {{data.designation}}
                                </td>
                                <td>
                                    {{data.griType}}
                                </td>
                                <td>
                                    {{data.email}}
                                </td>
                                <td>
                                    {{data.contact}}
                                </td>
                                <td>
                                    {{data.date}}
                                </td>
                                <td>
                                    <i class="fa fa-edit  btnEdit" value="Edit" ng-click="ShowHide(data.UserId)" title="Edit"></i>
                                </td>
                                

                                <td>
                                    <span class="m-switch m-switch--icon m-switch--danger">
                                        <label>
                                            <input type="checkbox" ng-show="chkStatus" ng-checked="{{data.memberstatus}}" ng-click="Delete(data.UserId)">
                                            <span></span>
                                        </label>
                                    </span>
                                </td>
                              
                            </tr>


                        </tbody>
                    </table>

                </div>
            </div>
        </form> 
    </div>

    <script type="text/javascript" src="~/Content/assets/plugins/jquery/dist/jquery.min.js"></script>
    <script type='text/javascript' src='~/Content/assets/app/datatables/jquery.dataTables.min.js'></script>
    <link href="~/Content/assets/vendors/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />


