
@{
    ViewBag.Title = "AllGrievances";
    Layout = "~/Areas/Admin/Views/Shared/AdminDashboardLayout.cshtml";
}

@*<h2>All Posted Grievances</h2>*@
<html lang="en" class="no-js">

<body ng-app="GR">
    @using System.Configuration;
    <div ng-controller="GrievanceController">
        <form class="student-admission-wrapper" ng-init="Initialize()">
            <div class="m-portlet m-portlet--tab">

                <div class="m-portlet m-portlet--mobile">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                    All Posted Grievances
                                </h3>
                            </div>
                        </div>

                    </div>

                </div>
                <table table datatable="ng" dt-options="dtOptions" class="table table-striped- table-bordered  " id="atable">
                    <thead>
                        <tr>
                            <th>Complaint Number</th>
                            <th>Grievance Type</th>
                            <th>Date</th>
                            <th>Grievance Cell Member</th>
                            @*<th>Designation</th>*@
                            <th>Subject</th>
                            <th>Post</th>
                            <th>Grievances Action</th>
                            <th>Status</th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="data in GrievanceList | filter:search">
                            <td>
                                {{data.CompID}}
                            </td>
                            <td>
                                {{data.GrievanceType}}
                            </td>
                            <td>
                                {{data.Date}}
                            </td>
                            <td>
                                {{data.contact}}
                            </td>
                            <td>
                                {{data.Subject}}
                            </td>
                            <td>
                                {{data.Post}}
                            </td>
                            <td>
                                {{data.GrievanceAction}}
                            </td>
                            <td>
                                {{data.status}}
                            </td>
                           

                        </tr>

                    </tbody>
                </table>
</div></form>
    </div>
    

    <script type="text/javascript" src="~/Content/assets/plugins/jquery/dist/jquery.min.js"></script>
    <script type='text/javascript' src='~/Content/assets/app/datatables/jquery.dataTables.min.js'></script>
    <script src="@Url.Content("~/Content/angularjs/scripts/angular.min.js")" type="text/javascript"></script>
    <script type='text/javascript' src='~/Content/assets/app/datatables/angular-dataTables.js'></script>    <script src="@Url.Content("~/Scripts/ProjectScript/Grievance/GrievanceTypeModule.js")"></script>
    <script src="@Url.Content("~/Scripts/Common/Service.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ProjectScript/Grievance/GrievanceTypeList.js")" type="text/javascript"></script>


    <script>
        var baseURL = "@ConfigurationManager.AppSettings["BaseUrlPath"].ToString()";
    </script>
</body>
</html>

