
@{
    ViewBag.Title = "SmsSetting";
    Layout = "~/Areas/Admin/Views/Shared/AdminDashboardLayout.cshtml";
}


<body ng-app="GR">
    @using System.Configuration;
    <div ng-controller="SmsSettingController">
        <form name="form" id="frmCRUD" class="m-form m-form--fit m-form--label-align-right" ng-init="Initialize()">

            <div class="m-portlet m-portlet--tab">
                <div class="m-portlet m-portlet--mobile">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                    SMS Setting
                                </h3>
                                <div style="margin-left:200px;">
                                    <h6>Status</h6>
                                </div>
                                <div class="form-group m-form__group">

                                    <select ng-model="ButtonActive" ng-init="ButtonActive=Active" ng-change="Initialize()" class="form-control">
                                        <option  value="Active" ng-selected="true">Active</option>
                                        <option value="Deactive">Deactive</option>
                                    </select>
                                </div>

                            </div>
                        </div>
                        <div class="m-portlet__head-tools">
                            <ul class="m-portlet__nav">
                                <li class="m-portlet__nav-item">
                                    <input type="button" class="btn btn-accent" value="NEW" ng-click="Show()" />
                                </li>


                            </ul>
                        </div>
                    </div>

                </div>


                <div ng-show="IsVisible">
                    <div class="m-portlet__body">
                        <div class="form-body">

                            <div class="form-group m-form__group">
                                <label> USER ID</label>

                                <input type="text" ng-model="GATEWAYUSERID" value={{GATEWAYUSERID}} class="form-control m-input" name="UserId" ng-required="true" />
                                <input type="hidden" ng-model="SETTINGID" value={{SETTINGID}} name="SettingId" class="form-control" />



                            </div>
                            <div class="form-group m-form__group">
                                <label> PASSWORD</label>

                                <input type="text" ng-model="GATEWAYPASSWORD" value={{GATEWAYPASSWORD}} name="Password" class="form-control m-input" ng-required="true" />


                            </div>
                            <div class="form-group m-form__group">
                                <label> SEND SMS API</label>

                                <input type="text" ng-model="SMSSENDAPI" name="SendSmsApi" value={{SMSSENDAPI}} class="form-control m-input" ng-required="true" />


                            </div>
                            <div class="form-group m-form__group">
                                <label> CHECK BALANCE API</label>

                                <input type="text" ng-model="CHECKBALANCEAPI" name="CheckBalanaceApi" value={{CHECKBALANCEAPI}} class="form-control m-input" ng-required="true" />


                            </div>
                        </div>

                        <div class="m-portlet__foot m-portlet__foot--fit">
                            <div class="m-form__actions">

                                <button class="btn btn-primary " ng-show="btnSave" ng-click="postdata(GATEWAYUSERID,GATEWAYPASSWORD,SMSSENDAPI,CHECKBALANCEAPI)">
                                    <i class="fa fa-database"> </i>  Save
                                </button>

                                <button class="btn btn-primary" ng-show="btnUpdate" ng-click="Update(GATEWAYUSERID,GATEWAYPASSWORD,SMSSENDAPI,CHECKBALANCEAPI,SETTINGID)">
                                    <i class="fa fa-database"> </i> Update
                                </button>

                                <button class="btn default" ng-click="Cancel()">
                                    <i class="fa fa-times"> </i> Cancel
                                </button>


                            </div>
                        </div>
                    </div>

                </div>


                <div class="m-portlet__body">
                    <p style="color:red">{{msg}}</p>
                    <table datatable="ng" dt-options="dtOptions" class="table table-striped- table-bordered  " id="atable">
                        <thead>
                            <tr>

                                <th>USER ID</th>
                                <th>PASSWORD</th>
                                <th>SEND SMS API</th>
                                <th>CHECK BALANCE API</th>
                                <th>ACTION</th>


                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="data in Sms | filter:search">

                                <td>
                                    {{data.GATEWAYUSERID}}
                                </td>
                                <td>
                                    {{data.GATEWAYPASSWORD}}
                                </td>
                                <td>
                                    {{data.SMSSENDAPI}}
                                </td>
                                <td>
                                    {{data.CHECKBALANCEAPI}}
                                </td>

                                <td>
                                    <input type="button" class="btn btn-primary" value="Edit" ng-click="ShowHide(data.SETTINGID)" />
 
                                    <input type="button" class="btn btn-danger" value="Delete" ng-click="Delete(data.SETTINGID)" /> 
                                </td>


                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </form> 
</div> 

    <script type="text/javascript" src="~/Content/assets/plugins/jquery/dist/jquery.min.js"></script>
    <script type='text/javascript' src='~/Content/assets/app/datatables/jquery.dataTables.min.js'></script>
    <script src="@Url.Content("~/Content/angularjs/scripts/angular.min.js")" type="text/javascript"></script>
    <script type='text/javascript' src='~/Content/assets/app/datatables/angular-dataTables.js'></script>
    <script src="@Url.Content("~/Scripts/ProjectScript/SmsSetting/SmsModule.js")"></script>
    <script src="@Url.Content("~/Scripts/Common/Service.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ProjectScript/EmailSetting/EmailController.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ProjectScript/SmsSetting/SmsController.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Common/CoomonFunctions.js")"></script>
    <script src="@Url.Content("~/Scripts/Common/customize.js")"></script>
    <script>
        var baseURL = "@ConfigurationManager.AppSettings["BaseUrlPath"].ToString()";
    </script>
</body>