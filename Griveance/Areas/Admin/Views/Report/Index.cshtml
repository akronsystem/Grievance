
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminDashboardLayout.cshtml";
}

@*<h2>Reports</h2>*@
<body ng-app="GR">
    @using System.Configuration;
    <div ng-controller="ReportController">
        <form class="m-form m-form--fit m-form--label-align-right">
            <div class="m-portlet m-portlet--tab">

                <div class="m-portlet m-portlet--mobile">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                 Grievance Type List
                                </h3>
                            </div>
                        </div>

                    </div>
                    <div class="form-group m-form__group" ng-init="Initialize()">
                        <label for="exampleGrievance">Report Type</label>
                        <select class="form-control m-input" id="report" ng-model="id">

                            <option ng-repeat="s in Report" value="{{s.id}}">{{s.name}}</option>

                        </select><span id="error4"></span>
                    </div>
                    <div style="display:none" id="grievance">
                        <div class="form-group m-form__group" ng-init="GetInfo()">
                            <label for="exampleGrievance">Grievance Type</label>
                            <select class="form-control m-input" id="exampleGrievance" ng-model="GriveanceType">

                                <option ng-repeat="s in Grievance" value="{{s.grivance_id}}">{{s.grivance_name}}</option>

                            </select>
                        </div>
                    </div>
                    <div style="display:none" id="member">
                        <div class="form-group m-form__group" ng-init="GetMember()">
                            <label for="exampleGrievance">Grievance Member List</label>
                            <select class="form-control m-input" id="exampleGrievance" ng-model="name">

                                <option ng-repeat="s in Member" value="{{s.name}}">{{s.name}}</option>

                            </select>
                        </div>
                    </div>
                    <div class="form-group m-form__group">
                        <label for="exampleInputEmpCode">From Date</label>
                        <input type="text" class="form-control m-input" id="fdate" placeholder="From Date" />
                       
                      </div>
                    <div class="form-group m-form__group">
                        <label for="exampleInputEmpCode">To Date</label>
                        <input type="text" class="form-control m-input" id="todate" placeholder="To Date" />

                    </div>
                    <div class="form-group m-form__group">
                       
                       <button class="btn btn-info m-btn m-btn--icon" ng-click="Save(s.id)">        @*onclick="location.href='@Url.Action("ReportDwonload", "Report")'"*@
                            <span>
                                <i class="fa fa-print"></i>
                                <span>Print</span>
                            </span>
                        </button>
                      
                        <button class="btn btn-danger m-btn m-btn--icon">
                            <span>
                                <i class="la la-refresh"></i>
                                <span>Reset</span>
                            </span>
                        </button>
                    </div>
                    </div>
                <div class="m-portlet m-portlet--mobile"></div>
                </div>
        </form>
        </div>

    <script src="@Url.Content("~/Content/angularjs/scripts/angular.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ProjectScript/Report/ReportModule.js")"></script>
    <script src="@Url.Content("~/Scripts/Common/Service.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ProjectScript/Report/ReportController.js")" type="text/javascript"></script>

    <script>
        var baseURL = "@ConfigurationManager.AppSettings["BaseUrlPath"].ToString()";
    </script>
    <script src="~/Content/assets/vendors/base/vendors.bundle.js" type="text/javascript"></script>
    <script src="~/Content//assets/demo/default/base/scripts.bundle.js" type="text/javascript"></script>
    <script type="text/javascript">
        $('#report').on('change', function () {
            if (this.value == '5' || this.value == '6' || this.value == '7') {
                $("#grievance").show();

            } else {
                $("#grievance").hide();

            }
           
            if (this.value == '8') {
                $("#member").show();
                $("#grievance").hide();
            }
            else {
                $("#member").hide();

            }
            if (this.value == '9') {
                $("#member").show();
                $("#grievance").hide();

            }
            else {
              

            }


        });
    </script>



    </body>
